<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="10dp" />
    <gradient
        android:angle="45"
        android:centerColor="#fff"
        android:endColor="#fff"
        android:startColor="#fff"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <size
        android:width="100dp"
        android:height="30dp" />
    <stroke
        android:width="2dp"
        android:color="#3F51B5" />
</shape>