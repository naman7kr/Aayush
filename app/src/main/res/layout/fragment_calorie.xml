<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fats"
            android:textSize="20sp"
            android:id="@+id/text_fats"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:visibility="visible"

            />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fats_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:maxHeight="10dp"
        android:minHeight="5dp"
        android:progress="30"
        android:scaleY="4"
        android:background="#FFCDD2"
        android:progressTint="#D50000"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carbohidrate_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:maxHeight="10dp"
            android:minHeight="5dp"
            android:progress="50"
            android:scaleY="4"
            android:background="#2196F3"
            android:progressTint="#0D47A1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Carbs"
            android:textSize="20sp"
            android:id="@+id/text_carbs"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:visibility="visible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proteins_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:maxHeight="10dp"
            android:minHeight="5dp"
            android:progress="50"
            android:scaleY="4"
            android:background="#2196F3"
            android:progressTint="#0D47A1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Proteins"
            android:textSize="20sp"
            android:id="@+id/text_proteins"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:visibility="visible"/>
    </RelativeLayout>
    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/button_shape"
        android:textColor="#64B5F6"
        android:text="Add Meal"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:id="@+id/calorie_addmeal"
        />
</LinearLayout>